<idea-plugin>
  <id>com.samdark.intellij-visual-studio-code-dark-plus</id>
  <name>Visual Studio Code Dark Plus Theme</name>
  <version>1.5</version>
  <vendor email="sam@rmcreative.ru" url="https://rmcreative.ru">Alexander Makarov</vendor>

  <description><![CDATA[
      A dark theme for JetBrains IDEs inspired by default Visual Studio Code "Dark Plus" theme
    ]]></description>

  <change-notes><![CDATA[
    <b>1.5</b>
    <ul>
      <li>Removed injected language block highlighting.</li>
    </ul>

    <b>1.4</b>
    <ul>
      <li>Adjusted minimal version of IDEA to match the one themes were introduced.</li>
    </ul>

    <b>1.3</b>
    <ul>
        <li>Improved markdown highlighting.</li>
    </ul>

    <b>1.2</b>
    <ul>
        <li>Removed screenshot from description</li>
    </ul>

    <b>1.1</b>
    <ul>
        <li>Fixed theme compatibility</li>
    </ul>

    <b>1.0</b>
    <ul>
        <li>Initial release</li>
    </ul>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="191.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <themeProvider id="e843a6a0-d4df-4c2a-b5b6-99dcbb839b8d" path="/visual_studio_code_dark_plus.theme.json"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

  <depends>com.intellij.modules.lang</depends>
</idea-plugin>
